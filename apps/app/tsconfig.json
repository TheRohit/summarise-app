{
  "extends": "@v1/typescript/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    "src/lib/cookies/cookie-manager.js",
    "src/lib/cookies/generate-yt-token.js"
  ],
  "exclude": ["node_modules"]
}
